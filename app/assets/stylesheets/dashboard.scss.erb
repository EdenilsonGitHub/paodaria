/*############# Dashboard #############*/

.background-dashboard-hover {
    background-color: #f5f4ce;
    color:#530606f5;
    font-size: 23px;
    width: 100%;
}

.background-dashboard-hover:hover {
    background-color: #530606f5;
    color: #f5f4ce!important;
    text-decoration: none;
}

.btn-lateral {
    width: 100%; 
    height: 35px; 
    color: #fff; 
    background-color: #530606f5; 
    border-bottom-style: none;
    border: 0px;
    margin-top: 1px;
}

.btn-lateral:hover {
    background-color: #380404f5;
    font-weight: bold;
}

.conteudo-dashboard {
    width: 90%;
    margin: 0 auto;
    margin-bottom: 40px !important;
    margin-top: 80px !important;
    min-height: 250px;
    background-color: #f5f4ce;
    border-radius: 5px;
    border: 2px solid #53060688;
}

.div_dashboards_index {
    width: 100%; 
    background-color: red; 
    height: 100px; 
    display: grid; 
    text-align: center;
}

.div-lateral {
    display: inline-block;
    width: 200px; 
    margin-left: -200px; 
    height: 500px; 
    margin-top: 133px;
    position: fixed;
}

.div-conteudo-fundo {
    width: 1250px; 
    margin: 0 auto;
}

.lateral-first{
    border-top-left-radius: 5px;
}

.lateral-last {
    border-bottom-left-radius: 5px;
}

.painel-de-controle-conteudo {
    display: inline-block; 
    width: 1010px!important;
}

.selecione_a_esquerda {
    margin-top: 5px;
    margin-left: 5px;
    color: red;
}

