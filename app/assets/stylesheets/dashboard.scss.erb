/*############# Dashboard #############*/

.btn-lateral {
    width: 100%; 
    height: 35px; 
    color: #fff; 
    background-color: #530606f5; 
    border-bottom-style: none;
    border: 0px;
    margin-top: 1px;
}

.btn-lateral:hover {
    background-color: #380404f5;
    font-weight: bold;
}

.div-lateral {
    display: inline-block;
    width: 200px; 
    margin-left: -200px; 
    height: 500px; 
    margin-top: 133px;
    position: fixed;
}

.div-conteudo-fundo {
    width: 1250px; 
    margin: 0 auto;
}

.fieldset {
    webkit-box-shadow: 5px 4px 10px #ccc;
    border-radius: 5px;
    border-color: #c7c2c2;
    margin-bottom: 10px;
    -webkit-border-radius: 5px;
    display: block;
    margin-inline-start: 2px;
    margin-inline-end: 2px;
    padding-block-start: 0.35em;
    padding-inline-start: 0.75em;
    padding-inline-end: 0.75em;
    padding-block-end: 0.625em;
    min-inline-size: min-content;
    border-width: 2px;
    border-style: groove;
    border-color: threedface;
    border-image: initial;
    background-image: linear-gradient(to bottom, #f5f4ce 10%, #53060644 25%);
}

.lateral-first{
    border-top-left-radius: 5px;
}

.lateral-last {
    border-bottom-left-radius: 5px;
}

.legend {
    width: auto;
    height: 100%;
    margin: 0 auto;
    padding-left: 5px;
    padding-right: 5px;
    background-color: #f5f4ce;
    border-bottom-right-radius: 15px;
    border-bottom-left-radius: 15px;
}

.painel-de-controle-conteudo {
    display: inline-block; 
    width: 1010px!important;
}

.selecione_a_esquerda {
    margin-top: 5px;
    margin-left: 5px;
    color: red;
}

