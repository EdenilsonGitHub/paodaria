.form-design {
    width: 50%;
    margin: 20px auto;
    border: 2px solid #53060688;
    border-radius: 5px;
    padding: 20px 0px 20px 0px;
    background-color: #f5f4ce;
}

.wid-100p {
    width: 100%;
}
.wid-80-por {
    width: 80%;
    margin: 0 auto;
}

.hr-system-80-por {
    width: 80%;
    border: 1px solid #53060688;
}

.hr-system-100-por {
    width: 100%;
    border: 1px solid #53060688;
}

.titulo-system {
    text-align: center;
    color: #530606;
}

.titulo-system-20-px-top-bot {
    text-align: center;
    color: #530606;
    margin-top: 20px;
    margin-bottom: 20px;
}

.botao-cor-padrao {
    background-color: #530606 !important;
    border: 1px solid #360404 !important;
    color: white !important;
}

.botao-cor-padrao:hover:active {
    background-color: #2e0e02 !important;
    border: 1px solid #180701 !important;
}

.focus-padrao:focus {
    box-shadow: 0.1px 0.3px 1px 3px #53060688 !important;
    border-color: #53060688 !important;
}

.focus-check:focus {
    box-shadow: 0.1px 0.3px 0.3px 3px #53060688 !important;
    border-color: #53060688 !important;
}

.link-azul {
    color: #169 !important;
}

.field_with_errors {
    input {
        border-color: red;
    }
}

