/*       Padr√µes       */

.alinhamento-label-form {
    width: 140px;
    padding-right: 28px;
    padding-top: 7px;
}

.background-color-padrao {
    background-color: #920f0f !important;
}

.boas-vindas {
    font-family: serif;
    font-size: 48px;
    line-height: normal;
    color: #920f0f;
    letter-spacing: -1px;
    text-align: center;
    margin-bottom: 40px;
    margin-top: 30px;
}

.botao-cor-padrao {
    background-color: #920f0f !important;
    border: 1px solid #360404 !important;
    color: white !important;
}

.botao-cor-padrao:hover:active {
    background-color: #2e0e02 !important;
    border: 1px solid #180701 !important;
}

.botoes-org {
    display: inline-block;
    float: right;
    height: 42px;
    width: 277px;
    margin-top: 2px;
}

.botoes-org-index {
    display: inline-block;
    float: right;
    height: 42px;
    width: 134px;
    margin-top: 7px;
}

.btn-entrar {
    background-color: #920f0f !important;
    color: white !important;
    border: 0;
}

.btn-padrao {
    background-color: #920f0f !important;
    border: 1px solid #330404 !important;
    color: white !important;
}

.btn-sem-focus:focus {
    box-shadow: 0px 0px 0px 0px !important;
}

.color-padrao {
    color: white !important;
}

.color-padrao-red {
    color: #920f0f !important;
}

.color-padrao-gray {
    color: #2e2a2a !important;
}

.conteudo {
    width: 90%;
    margin: 0 auto;
    margin-bottom: 40px !important;
    margin-top: 80px !important;
    min-height: 250px;
    background-color: #f5f4ce;
    border-radius: 5px;
    border: 2px solid #920f0f88;
}

.div-cabeca {
    background-color: #920f0ff5;
    width: 100%;
    padding-top: 5px;
    padding-bottom: 5px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}

.div-cabeca-index {
    width: 100%;
    padding-bottom: 5px;
    background-color: #920f0ff5;
    height: 53px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}

.field_with_errors {
    input {
        border-color: red;
    }
}

.focus-check:focus {
    box-shadow: 0.1px 0.3px 0.3px 3px #920f0f88 !important;
    border-color: #920f0f88 !important;
}

.focus-padrao:focus {
    box-shadow: 0.1px 0.3px 1px 3px #920f0f88 !important;
    border-color: #920f0f88 !important;
}

.fundo_erro {
    background-color: rgb(235, 78, 78);
    border: 1px solid red;
    width: 100%;
    margin: 0 auto;
    border-radius: 5px;
    color: white;
    margin-bottom: 25px !important;
}

.form-design {
    width: 70%;
    margin: 20px auto;
    border: 2px solid #920f0f88;
    border-radius: 5px;
    padding: 20px 0px 20px 0px;
    background-color: #f5f4ce;
}

.label-org {
    display: inline-block;
    height: 42px;
    font-size: 23px;
    font-weight: bold;
    padding-top: 5px;
    padding-left: 15px;
    border-top-left-radius: 5px;
    color: white;
    padding-bottom: 30px;
}

.label-org-index {
    display: inline-block;
    height: 42px;
    font-size: 25px;
    border-top-left-radius: 5px;
    color: white;
    padding-bottom: 30px;
    font-size: 35px;
}

.link-azul {
    color: #169 !important;
}

.nao_ha_registros {
    padding-top: 10px;
    color: red;
}

.select-padrao {
    height: 38px;
    min-width:125px;
}

.titulo-system {
    text-align: center;
    color: #920f0f;
}

.titulo-system-20-px-top-bot {
    text-align: center;
    color: #920f0f;
    margin-top: 20px;
    margin-bottom: 20px;
}

