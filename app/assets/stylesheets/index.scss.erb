.table_index{
   border-collapse: collapse;
   color: #666;
   width: 98%;
   border-spacing: 2px;
   margin: 0 auto;
}

.tr_table_index {
    border: 1px solid #d7d7d7;
    background-color: #530606f5;
    color: white;
}

.odd{
   background-color: #f9f9f9;
   td{
      padding: 4px;
      line-height: 20px;
      border: 1px solid #d7d7d7;
   }
}

.even{
   background-color: white;
   td{
      padding: 4px;
      line-height: 20px;      
      border: 1px solid #d7d7d7;
   }
}