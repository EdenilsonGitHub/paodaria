/*      Barra de procura     */
.searchbar {
      margin-bottom: auto;
      margin-top: auto;
      height: 40px;
      width: 250px;
      background-color: white;
      border-radius: 30px;
      padding-left: 5px;
      border: 2px solid #530606;
}

.search_input {
      color: #530606;
      border: 0;
      outline: 0;
      background: none;
      width: 200px;
      line-height: 20px;
      padding-left: 15px;
}

.search_icon {
      height: 35px;
      width: 40px;
      float: right;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 50%;
      color: #530606!important;
      text-decoration: none!important;
      background: white;
      margin-top: 1px;
      margin-right: 1px;
      transition: background-color 0.5s;
      transition: color 0.5s;
}

.search_icon:hover {
      background-color: #530606!important;
      border-radius: 20px!important;
      color: white!important;
}

