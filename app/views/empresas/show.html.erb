<div class="conteudo show-produtos">
    <div class="div-cabeca">
        <div class="label-org"> Empresa: (<%= @empresa.nome %>) </div>
        <div class="botoes-org">
            <%= link_to 'Excluir', empresa_path(@empresa.id), data: { confirm: 'Deseja excluir este usuário permanentemente?' }, method: :delete, class:'btn btn-danger' %>
            <%= link_to 'Editar', edit_empresa_path(@empresa.id, { show: "show"}), class:'btn btn-light' %>
            <%= link_to 'Novo registro', new_empresa_path({ show: "novo", empresa: @empresa}), class:'btn btn-success' %>
        </div>
    </div>
    <table class="tabela-lado-lado mt-12px">
        <tbody>
            <tr>
                <td class="td-index-esquerda"> Logo: </td>
                <td class="td-index-direita"> <%= image_tag @empresa.logo.url(:normal) %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Nome: </td>
                <td class="td-index-direita"> <%= @empresa.nome %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Razão social: </td>
                <td class="td-index-direita"> <%= @empresa.razao_social %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Sigla: </td>
                <td class="td-index-direita"> <%= @empresa.sigla  %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Nome do sistema: </td>
                <td class="td-index-direita"> <%= @empresa.sistema  %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> CNPJ: </td>
                <td class="td-index-direita"> <%= @empresa.cnpj %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Telefone: </td>
                <td class="td-index-direita"> <%= @empresa.telefone %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> E-mail: </td>
                <td class="td-index-direita"> <%= @empresa.email %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Pais: </td>
                <td class="td-index-direita"> <%= @empresa.pais %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Estado: </td>
                <td class="td-index-direita"> <%= @empresa.estado %> </td>
            </tr>
                        <tr>
                <td class="td-index-esquerda"> Cidade: </td>
                <td class="td-index-direita"> <%= @empresa.cidade %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Rua: </td>
                <td class="td-index-direita"> <%= @empresa.rua %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Numero: </td>
                <td class="td-index-direita"> <%= @empresa.numero %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Complemento: </td>
                <td class="td-index-direita"> <%= @empresa.complemento %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> CEP: </td>
                <td class="td-index-direita"> <%= @empresa.cep %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Ativo: </td>
                <td class="td-index-direita"> <%= @empresa.ativo ? ico_yes(class: 'fa-14') : ico_no(class: 'fa-14')  %> </td>
            </tr>
        </tbody>
    </table>
</div>