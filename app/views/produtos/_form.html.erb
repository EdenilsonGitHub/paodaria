<%= form_for @produto do |u| %>

    <div class="form-group">
        <%= u.label :nome, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right float-right">
            <%= u.text_field :nome, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <div class="form-group">
        <%= u.label :descricao, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right">
            <%= u.text_field :descricao, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <div class="form-group">
        <%= u.label :data_fabricacao, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right">
            <%= u.date_field :data_fabricacao, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <div class="form-group">
        <%= u.label :data_validade, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right">
            <%= u.date_field :data_validade, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <div class="form-group">
        <%= u.label :codigo_de_barras, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right">
            <%= u.text_field :codigo_de_barras, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <div class="form-group">
        <%= u.label :quantidade, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right">
            <%= u.text_field :quantidade, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <div class="form-group">
        <%= u.label :preco, class: 'col-xs-12 col-sm-4 col-md-4 col-lg-3 txt-alg-rig' %>
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 float-right">
            <%= u.text_field :preco, class: 'form-control focus-padrao' %>
        </div>
    </div>

    <hr class="hr-system-100-por">

    <div class='wid-100p txt-alg-cen'>
        <%= u.submit 'Cadastrar', class: 'txt-alg-cen btn botao-cor-padrao' %>
    </div>

<% end %>