<table class="table_index" style="<%= 'margin: 5px auto' unless @produtos.blank? %>">
    <% if @produtos.blank? %>
        <tr>
            <td colspan="2" class="nao_ha_registros">
                Não há registros
            </td>
        </tr>
    <% else %>
        <thead>
            <tr>
                <th  class="tr_table_index text-center">ID</th>
                <th  class="tr_table_index text-center">Nome</th>
                <th  class="tr_table_index text-center">Data de fabricação</th>
                <th  class="tr_table_index text-center">Data de validade</th>
                <th  class="tr_table_index text-center">Código de barras</th>
                <th  class="tr_table_index text-center">Quantidade</th>
                <th  class="tr_table_index text-center">Preço</th>
            </tr>
        </thead>
        <tbody>
            <% @produtos.each do |produto| %>
                <tr class="<%= cycle("odd", "even") -%>">
                    <td class="text-center"> <%= produto.id %> </td>
                    <td> <%= link_to produto.nome, produto_path(produto), class: 'link-azul' %> </td>
                    <td> <%= produto.data_fabricacao.strftime("%m/%d/%Y") %> </td>
                    <td> <%= produto.data_validade.strftime("%m/%d/%Y") %> </td>
                    <td> <%= produto.codigo_de_barras %> </td>
                    <td> <%= produto.quantidade %> </td>
                    <td> <%= produto.preco.to_currency(Currency::BRL) %> </td>
                </tr>
            <% end %>
        </tbody>
    <% end %>
</table>