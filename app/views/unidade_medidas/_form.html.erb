<%= form_for @unidade_medida, validate:true, html: { multipart: true }  do |u| %>

    <% if @unidade_medida.errors.any? %>
        <div class="fundo_erro">
            <h2 class="text-center">Revise as informações abaixo: </h2>
            <p> </p>
            <ul>
                <% @unidade_medida.errors.full_messages.each do |msg| %>
                    <li><%= msg.humanize %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <table style="width: 100%;">
        <tbody style="width: 100%;">
            <tr>
                <td class="text-right alinhamento-label-form">
                    <%= u.label :nome, class: 'text-right', style: 'width: 170px' %>
                </td>
                <td class="pb-6px">
                    <%= u.text_field :nome, class: 'form-control focus-padrao', style: 'width: 100%' %>
                </td>
            </tr>
        </tbody>
    </table>

    <hr class="hr-system-100por">

    <div class='width-100por text-center'>
        <% if params[:show] == "show" || params[:show] == "novo" %>
            <% @unidade_medida = UnidadeMedida.where(id: params[:unidade_medida]).first if params[:unidade_medida] != nil %>
            <%= link_to 'Voltar', unidade_medida_path(@unidade_medida), class: "btn btn-danger" %>
        <% else %>
            <%= link_to 'Voltar', unidade_medidas_path(), class: "btn btn-danger" %>
        <% end %>
        <%= u.submit 'Confirmar', class: 'text-center btn btn-success' %>
    </div>

<% end %>