<div class="conteudo">
    <div class="div-cabeca">
        <div class="label-org"> Ingrediente: (<%= @ingrediente.nome %>) </div> 
        <div class="botoes-org">
            <%= link_to 'Excluir', ingrediente_path(@ingrediente.id), data: { confirm: 'Deseja excluir este usuÃ¡rio permanentemente?' }, method: :delete, class:'btn btn-danger' %>
            <%= link_to 'Editar', edit_ingrediente_path(@ingrediente.id), class:'btn btn-light' %>
            <%= link_to 'Novo registro', new_ingrediente_path, class:'btn btn-success' %>
        </div>
    </div>
    <table class="tabela-lado-lado mt-12px">
        <tbody>
            <tr>
                <td class="td-index-esquerda"> Nome: </td>
                <td class="td-index-direita"> <%= @ingrediente.nome %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Alergicos: </td>
                <td class="td-index-direita"> <%= @ingrediente.alergicos ? ico_yes(class: 'fa-14') : ico_no(class: 'fa-14')  %> </td>
            </tr>
            <tr>
                <td class="td-index-esquerda"> Observacao: </td>
                <td class="td-index-direita"> <%= @ingrediente.observacao %> </td>
            </tr>           
        </tbody>
    </table>
</div>